<h1>Listing categories</h1>

<table class="category">
  <tr>
    <td class="action">Name</td>
    <td class="legend">Description</td>
    <td class="action" colspan="3">Actions</td>
    <!--td class="action"></td>
    <td class="action"></td-->
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td class="action"><%= link_to  'Show', category %></td>
    <td class="action"><%= link_to 'Edit', edit_category_path(category) %></td>
    <td class="action"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

